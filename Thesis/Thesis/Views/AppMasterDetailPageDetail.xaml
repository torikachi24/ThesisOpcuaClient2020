<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Thesis.AppMasterDetailPageDetail"
             Title="Detail">
  <StackLayout Padding="10">
        <Label Text="SERVER NAME" TextColor="DodgerBlue" FontAttributes="Bold" FontSize="Large"/>
        <BoxView HeightRequest="1" Color="DodgerBlue" />
        <Label x:Name="servername" FontSize="Medium"/>

        <Label Text="SERVER URI" TextColor="DodgerBlue" FontAttributes="Bold" FontSize="Large"/>
        <BoxView HeightRequest="1" Color="DodgerBlue" />
        <Label x:Name="serveruri" FontSize="Medium"/>

        <Label Text="SECURITY" TextColor="DodgerBlue" FontAttributes="Bold" FontSize="Large"/>
        <BoxView HeightRequest="1" Color="DodgerBlue" />
        <Label Text="..." FontSize="Medium"/>

        <Label Text="CONNECTION STATUS" TextColor="DodgerBlue" FontAttributes="Bold" FontSize="Large"/>
        <BoxView HeightRequest="1" Color="DodgerBlue" />
        <Label x:Name="connectionstatus" FontSize="Medium"/>

        <Label Text="CONNECTED SINCE" TextColor="DodgerBlue" FontAttributes="Bold" FontSize="Large"/>
        <BoxView HeightRequest="1" Color="DodgerBlue" />
        <Label x:Name="connectedsince" FontSize="Medium"/>
        
    </StackLayout>
</ContentPage>