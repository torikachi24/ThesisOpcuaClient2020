<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Thesis"
             x:Class="Thesis.MainPage"
             Title="OPC UA Client">
    <ContentPage.Content>
        <StackLayout  Margin = "20,20,20,20">
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
                <Label Text="OPC UA server's endpoint URL:" FontSize="Medium" TextColor="#0066ff" FontAttributes="Bold" />
                <Entry x:Name="EntryUrl" Placeholder="Write your EndpointUrl here" />

                <StackLayout Orientation="Horizontal">
                    <Button  x:Name="AddNewConnection"
                    Text="Add New Connection"
                    Font="Large"
                    Margin="0,0,0,0"
                    HorizontalOptions="FillAndExpand"
                    BorderRadius="6"
                    BackgroundColor="#ccccb3"
                    Clicked="AddNewConnection_Clicked" />

                    <Button x:Name="ConnectButton"
                    Text="Connect"
                    Font="Large"
                    HorizontalOptions="FillAndExpand"
                    Clicked="OnConnect"
                    BorderRadius="6"
                    Margin="0,0,0,0"
                    BackgroundColor="#ccccb3" />
                </StackLayout>

